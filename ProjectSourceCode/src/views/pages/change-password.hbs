<!-- change-password.hbs -->


<div class="container mt-5">
    <h2>Change Password</h2>
    {{#if message}}
    <h3 class="text-bg-red text-white text-center">{{message}}</h3>
    {{/if}}
    <form id="passForm" action="/user/password" method="POST">
        <div class="form-group">
            <label for="oldPassword">Old Password:</label>
            <input type="password" class="form-control" id="oldPassword" name="oldPassword" required>
        </div>
        <div class="form-group">
            <label for="newPassword">New Password:</label>
            <input type="password" class="form-control" id="newPassword" name="newPassword" required>
        </div>
        <div class="form-group">
            <label for="confirmPassword">Confirm Password:</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
        </div>
        <button id="passButton" type="submit" class="btn btn-primary">Change Password</button>
    </form>
</div>

<script src="/resources/js/changePasswordScript.js"></script>